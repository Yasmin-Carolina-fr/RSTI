const readline = require('readline');
const rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout
});

rl.question('informe sua idade:'),
  (idade) => {
    if (parseInt(idade) > 18) {
      const voto = parseInt(idade);
    } else {
      console.log('pode votar');
    }
    rl.close();
  };
